  <script>
   document.getElementById('menu-btn').addEventListener('click', function() {
            var menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
  </script>

   <!-- Include GSAP Library -->
   <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>

   <!-- Custom CSS for Spinner -->
   <style>
     /* Spinner container styles */
     .spinner-container {
       display: flex;
       align-items: center;
       justify-content: center;
       width: 100px;
       height: 100px;
     }
 
     /* Spinner styles */
     .spinner {
       border: 6px solid rgba(0, 0, 0, 0.1); /* Subtle light border */
       border-top: 6px solid #4A90E2; 
       border-radius: 50%;
       width: 80px;
       height: 80px;
       animation: spin 1.5s linear infinite; /* Infinite spin animation */
     }
 
     /* Spinner keyframes */
     @keyframes spin {
       0% { transform: rotate(0deg); }
       100% { transform: rotate(360deg); }
     }
   </style>
 
   <script>
     // GSAP animation for dancing letters
     gsap.fromTo(".letter", 
       {y: 0},   // Start position
       {
         y: -20,  // Move the letters upward slightly
         duration: 0.5,
         ease: "bounce.inOut",  // Bounce effect
         repeat: -1,            // Infinite loop
         stagger: 0.1,          // Delay each letter
         yoyo: true             // Animate back to original position
       });
 
     // Hide the loader and show the main content after a certain time
     setTimeout(function() {
       document.getElementById("loader").style.display = "none"; // Hide loader
       document.getElementById("main-content").style.display = "flex"; // Show main content
     }, 5000); // 5 seconds duration
   </script>
