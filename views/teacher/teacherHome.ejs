<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teacher's Home Page - classConnect</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@^2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <div class="flex items-center">
        <span class="text-lg font-semibold text-gray-700">classConnect</span>
      </div>
      <div class="flex items-center space-x-4">
        <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
             alt="User Avatar"
             class="w-10 h-10 rounded-full overflow-hidden object-cover object-center" />
        <button id="menuToggle" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
          Menu
        </button>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div id="sidebar" class="fixed inset-0 bg-gray-800 bg-opacity-75 z-50 hidden md:flex md:flex-col md:w-64 md:fixed md:top-0 md:left-0 md:h-full">
    <div class="flex flex-col flex-grow bg-white p-4 space-y-4">
      <h2 class="text-xl font-semibold text-gray-800">Dashboard</h2>
      <ul class="space-y-2">
        <li>
          <a href="#" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded-md">
            <i class="fa-solid fa-house mr-2"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a href="#create-class" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded-md">
            <i class="fa-solid fa-chalkboard-teacher mr-2"></i>
            <span>Create Classroom</span>
          </a>
        </li>
        <li>
          <a href="#upload-materials" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded-md">
            <i class="fa-solid fa-upload mr-2"></i>
            <span>Upload Materials</span>
          </a>
        </li>
        <li>
          <a href="#announcements" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded-md">
            <i class="fa-solid fa-bullhorn mr-2"></i>
            <span>Announcements</span>
          </a>
        </li>
        <!-- Settings Menu Option -->
        <li>
          <a href="#" id="settingsButton" class="flex items-center p-2 text-gray-700 hover:bg-gray-200 rounded-md">
            <i class="fa-solid fa-cog mr-2"></i>
            <span>Settings</span>
          </a>
        </li>
      </ul>
      <div class="flex-grow"></div>
      <button id="logout" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">
        Logout
      </button>
    </div>
  </div>

  <!-- Main Content -->
  <main class="p-4 md:ml-64">
    <div class="container mx-auto">

      <!-- Display List of Created Classes -->
      <section id="created-classes" class="bg-white p-6 rounded-lg shadow-md mb-6">
        <h2 class="text-2xl font-semibold mb-4">Created Classes</h2>
        <ul id="classList" class="space-y-2">
          <!-- Dynamic Class List -->
        </ul>
      </section>

      <!-- Create Classroom Section -->
      <section id="create-class" class="bg-white p-6 rounded-lg shadow-md mb-6">
        <h2 class="text-2xl font-semibold mb-4">Create Classroom</h2>
        <form id="createClassForm">
          <div class="mb-4">
            <label for="className" class="block text-gray-700">Class Name</label>
            <input type="text" id="className" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter class name">
          </div>
          <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
              Create Class
            </button>
          </div>
        </form>
      </section>

      <!-- Upload Materials Section -->
      <section id="upload-materials" class="bg-white p-6 rounded-lg shadow-md mb-6">
        <h2 class="text-2xl font-semibold mb-4">Upload Materials</h2>
        <form>
          <div class="mb-4">
            <label for="materialTitle" class="block text-gray-700">Material Title</label>
            <input type="text" id="materialTitle" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter material title">
          </div>
          <div class="mb-4">
            <label for="materialFile" class="block text-gray-700">Upload File</label>
            <input type="file" id="materialFile" class="mt-1 w-full border border-gray-300 rounded-lg">
          </div>
          <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
              Upload
            </button>
          </div>
        </form>
      </section>

      <!-- Announcements Section -->
      <section id="announcements" class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Announcements</h2>
        <form>
          <div class="mb-4">
            <label for="announcementTitle" class="block text-gray-700">Announcement Title</label>
            <input type="text" id="announcementTitle" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter announcement title">
          </div>
          <div class="mb-4">
            <label for="announcementBody" class="block text-gray-700">Announcement Body</label>
            <textarea id="announcementBody" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" rows="4" placeholder="Enter announcement details"></textarea>
          </div>
          <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
              Post Announcement
            </button>
          </div>
        </form>
      </section>
    </div>
  </main>

  <!-- Settings Modal -->
  <div id="settingsModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
      <h3 class="text-xl font-semibold mb-4">Edit Profile</h3>
      <form id="editProfileForm">
        <div class="mb-4">
          <label for="teacherName" class="block text-gray-700">Name</label>
          <input type="text" id="teacherName" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <div class="mb-4">
          <label for="teacherEmail" class="block text-gray-700">Email</label>
          <input type="email" id="teacherEmail" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <div class="mb-4">
          <label for="teacherPassword" class="block text-gray-700">Password</label>
          <input type="password" id="teacherPassword" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <div class="mb-4">
          <label for="teacherPhone" class="block text-gray-700">Phone</label>
          <input type="text" id="teacherPhone" class="mt-1 px-4 py-2 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <div class="mb-4">
          <label for="teacherProfileImage" class="block text-gray-700">Profile Image</label>
          <input type="file" id="teacherProfileImage" class="mt-1 w-full border border-gray-300 rounded-lg">
        </div>
        <div class="flex justify-end">
          <button type="button" id="closeSettings" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 mr-2">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Update</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Script for Sidebar Toggle and Modal Handling -->
  <script>
    document.getElementById('menuToggle').addEventListener('click', function () {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('hidden');
    });

    document.getElementById('settingsButton').addEventListener('click', function () {
      const settingsModal = document.getElementById('settingsModal');
      settingsModal.classList.remove('hidden');
    });

    document.getElementById('closeSettings').addEventListener('click', function () {
      const settingsModal = document.getElementById('settingsModal');
      settingsModal.classList.add('hidden');
    });

    // Event listener to handle form submission and adding classes dynamically
    document.getElementById('createClassForm').addEventListener('submit', function (e) {
      e.preventDefault();
      const className = document.getElementById('className').value;
      if (className) {
        const classList = document.getElementById('classList');
        const newClassItem = document.createElement('li');
        newClassItem.classList.add('flex', 'items-center', 'p-2', 'text-gray-700', 'hover:bg-gray-200', 'rounded-md');
        newClassItem.innerHTML = `<i class="fa-solid fa-chalkboard mr-2"></i><span>${className}</span>`;
        classList.appendChild(newClassItem);
      }
    });
  </script>
</body>
</html>
