  <script>
    // Select the profile button and the profile dialog
    const profileButton = document.getElementById('profile-button');
    const profileDialog = document.getElementById('profile-dialog');

    // Toggle the visibility of the profile dialog when the profile button is clicked
    profileButton.addEventListener('click', function () {
        profileDialog.classList.toggle('hidden');
    });

    // Close the profile dialog when clicking outside
    window.addEventListener('click', function (event) {
        if (!profileButton.contains(event.target) && !profileDialog.contains(event.target)) {
            profileDialog.classList.add('hidden');
        }
    });
</script>