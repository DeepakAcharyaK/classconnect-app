<%- include('../components/header') %>

<body class="bg-gray-900 text-white">
  <%- include('./navbar') %>
  <%- include('./sidebar') %>

  <!-- Snackbar for displaying success/error messages -->
  <%- include('../components/snackbar', { 
      successMessage: successMessage, 
      errorMessage: errorMessage 
  }) %>

  <div class="flex P-10">
  <!-- Main Content -->
  <div class="flex-1 p-4">
    <h1 class="text-3xl font-bold mb-6">Messages</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Send Message to Students -->
      <div class="bg-gray-800 p-6 rounded-md shadow-lg">
        <h2 class="text-2xl font-semibold mb-4">Send Message to Students</h2>
        <form id="sendMessageToStudents" method="POST" action="/admin/send-message/student" class="flex flex-col">
          <input type="email" name="studentEmail" placeholder="Student Email" required class="mb-2 p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring focus:ring-blue-500" />
          <textarea name="messageContent" placeholder="Write your message here..." required class="mb-2 p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring focus:ring-blue-500" rows="4"></textarea>
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 p-2 rounded-md transition">Send Message</button>
        </form>
      </div>

      <!-- Send Message to Teachers -->
      <div class="bg-gray-800 p-6 rounded-md shadow-lg">
        <h2 class="text-2xl font-semibold mb-4">Send Message to Teachers</h2>
        <form id="sendMessageToTeachers" method="POST" action="/admin/send-message/teacher" class="flex flex-col">
          <input type="email" name="teacherEmail" placeholder="Teacher Email" required class="mb-2 p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring focus:ring-blue-500" />
          <textarea name="messageContent" placeholder="Write your message here..." required class="mb-2 p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring focus:ring-blue-500" rows="4"></textarea>
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 p-2 rounded-md transition">Send Message</button>
        </form>
      </div>
    </div>

  </div>
</div>
</div>

  <script>
    // Optional: JavaScript can be added here for dynamic message loading or form handling.
  </script>
</body>

<%- include('../components/footer') %>
